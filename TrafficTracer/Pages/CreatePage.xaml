<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TrafficTracer.ViewModels"
             xmlns:model="clr-namespace:TrafficTracer.Models"
             x:Class="TrafficTracer.Pages.CreatePage"
             x:DataType="vm:CreateViewModel">
    
    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Créer une Immatriculation"
               FontSize="24"
               FontAttributes="Bold" />
        
        <Entry Placeholder="Plaque" Text="{Binding Plate}" />

        <Picker Title="Type de plaque"
                ItemsSource="{Binding PlateTypes}"
                SelectedItem="{Binding SelectedPlateType}" />

        <DatePicker Date="{Binding SelectedDate}" />

        <Button Text="Créer" Command="{Binding CreateCommand}" />
    </VerticalStackLayout>
</ContentPage>
